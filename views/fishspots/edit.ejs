<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= fishspot.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/fishspots/<%= fishspot._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="fishspot[name]" id="name" value="<%= fishspot.name %>">
            </div>
             <div class="form-group">
                 <label for="cost">Price</label>
                <input class="form-control" type="number" name="fishspot[cost]" id="cost" value="<%= fishspot.cost %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="fishspot[location]" id="location" value="<%= fishspot.location %>">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="fishspot[image]" id="image" value="<%= fishspot.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="fishspot[description]" id="description" value="<%= fishspot.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/fishspots">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>